rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow client-side writes to appointments collection (for booking forms)
    match /appointments/{document} {
      allow create: if true; // Allow form submissions
      allow read, update, delete: if false; // No client-side reads/updates for privacy
    }
    
    // Allow client-side writes to contact-messages (for contact form submissions)
    match /contact-messages/{document} {
      allow create: if true; // Allow form submissions
      allow read, update, delete: if false; // No client-side reads/updates for privacy
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}