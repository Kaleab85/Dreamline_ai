rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to appointments collection for authenticated users
    match /appointments/{document} {
      allow read, write: if true; // Adjust based on your auth requirements
    }
    
    // Allow write access to contact-messages (for contact form submissions)
    // Only allow server-side writes, no client reads for privacy
    match /contact-messages/{document} {
      allow write: if true; // Server actions can write
      allow read: if false; // No client-side reads for privacy
    }
    
    // Allow read access to blog posts (public content)
    match /blog-posts/{document} {
      allow read: if true;
      allow write: if false; // Only admin should write blog posts
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}